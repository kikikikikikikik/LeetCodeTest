import java.util.*;

public class GoUpstairs {
    public int countWays(int n) {
        // write code here
        int a1 = 1;
        int a2 = 2;
        int a3 = 4;
        int sum = 0;
        if(n<3){
            return n;
        }
        if(n == 3){
            return a3;
        }
        for(int i=4;i<=n;i++){
            sum = ((a1+a2)%1000000007+a3)%1000000007;
            a1 = a2;
            a2 = a3;
            a3 = sum;
        }
        return sum;
    }
}

public class Solution {
    public double Power(double base, int exponent) {
        double result = 1;
        int n = exponent;
        if(exponent<0){
            exponent = -exponent;
        }
        for(int i=0;i<exponent;i++){
            result*=base;
        }
        return n>0?result:1/result;
  }
}
